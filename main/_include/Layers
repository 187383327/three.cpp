#ifndef THREECPP_LAYERS_H
#define THREECPP_LAYERS_H

namespace three {

class Layers
{
  unsigned int mask;

public:

  void set(unsigned int channel) {
    mask = 1 << channel | 0;
  }

  void enable(unsigned int channel) {
    mask |= 1 << channel | 0;
  }

  void toggle(unsigned int channel) {
    mask ^= 1 << channel | 0;
  }

  void disable(unsigned int channel) {
    mask &= ~ ( 1 << channel | 0 );
  }

  bool test(const Layers &layers) {
    return (mask & layers.mask ) != 0;
  }
};

}

#endif //THREECPP_LAYERS_H
